<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="style.css">
    <title>Nutrition - Limitless Lifestyle</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="myApp.js"></script>
  </head>
<body>
  <div class="topnav">
    <a href="/main">Home</a>
    <a href="/fitness">Fitness</a>
    <a class="active" href="/nutrition">Nutrition</a>
    <a href="/mental_health">Mental & Social Health</a>
    <a href="/contact">Contact</a>
    <div class="login">
      <a href="/login"><button class="login">Logout</button></a>
      </div>
  </div>
  <img class="pic1" src="https://www.cdc.gov/healthyweight/images/assessing/bmi-adult-fb-600x315.jpg?_=07167" alt="Body Mass Index"> 
  <h2>Kindly Enter your Details</h2>
<div ng-app="myApp" ng-controller="myCtrl">
<div class="div1">
  <form>
  <label for="fname">Name:</label><br>
  <input class="bmi_input" type="text" ng-model="firstname" id="fname" name="fname"><br>
  <label for="weight">Weight in Kgs:</label><br>
  <input class="bmi_input" type="text" ng-model="w" id="weight" name="weight"><br>
  <label for="height">Height in meters:</label><br>
  <input class="bmi_input" type="text" ng-model="h" id="height" name="height"><br><br>
</form> 
  <br>
  <button class="button" onclick=show()>SUBMIT</button>
  <br> <br>
</div>
<h1>{{firstname}},</h1>

<div style="background-color: white;">
  <h2 style="text-indent: 40px;" id="bmi_">Your Body Mass Index value is: <span id="bmi_display"></span></h2>
</div>
<div ng-controller="itemsCtrl">
  <br><hr><br>
  <p>Filter and find out recommended food quantities:</p>
  <p><input type="text" ng-model="test"></p>
  <ul>
    <li ng-repeat="x in names | filter:test">
      {{ x }}
    </li>
  </ul>
</div>
</div>

<script>
  function show(){
    var wt = document.getElementById("weight").value;
    var h = document.getElementById("height").value;
    var h_sq = parseFloat(h)*parseFloat(h);
    var bmi = parseFloat(wt)/h_sq;
    document.getElementById("bmi_display").innerHTML=bmi;
  }
</script>
</body>
</html>